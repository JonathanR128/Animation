<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Spiel"
             x:Class="Spiel.MainPage">

    <ContentPage.Content>
        <AbsoluteLayout>
           
            <BoxView x:Name="Box1" Color="Olive"  AbsoluteLayout.LayoutBounds="0.5, 0.5, 40, 40"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView x:Name="Box2" Color="Olive"  AbsoluteLayout.LayoutBounds="1, 0, 40, 40"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView x:Name="Box3" Color="Olive"  AbsoluteLayout.LayoutBounds="0, 1, 40, 40"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView x:Name="Box4" Color="Olive"  AbsoluteLayout.LayoutBounds="1, 1, 40, 40"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>
